    "version": "0.2.0",
    "configurations": [
        {
            "name": "app.py",
            "type": "debugpy",
            "request": "launch",
            "program": "project/app.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "envFile": "${workspaceFolder}/project/.env"
        },
        {
            "name": "Python: Debug Tests",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "purpose": ["debug-test"],
            "console": "integratedTerminal",
            "justMyCode": false,
            "presentation": {
                "hidden": true, // keep original launch order in 'run and debug' tab
            },
            "envFile": "${workspaceFolder}/project/.env"
        },
    ]
}